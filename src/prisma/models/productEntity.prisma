type ProductEntity {
  id: ID! @id
  SKU: String!
  quantity: Int!
  size: Size!
  price: Int!
  sale: Int!
  isShow: Boolean!
  color: Color! @relation(name: "Color", storage: Embedded)
  product: Product! @relation(name: "ProductEntity", link: INLINE)
  images: [Image!] @relation(name: "Images", storage: Embedded)
}

type Color @embedded {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  slug: String!
  value: String!
}

type Size @embedded {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  slug: String!
  value: String!
}
