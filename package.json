{
  "name": "express-graphql",
  "version": "1.0.0",
  "description": "project research express +  graphQL",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development webpack --webpack-config webpack.config.js --colors --progress",
    "start-docker": "bash start.sh",
    "test:unit": "NODE_ENV=testing rm -rf ./tmp/mocha-webpack && mocha-webpack --webpack-config webpack.testing.js \"src/**/*.spec.js\" --timeout 10000 --require source-map-support/register",
    "test": "npm run test:unit",
    "build": "webpack --webpack-config webpack.production.js --colors",
    "start:prod": "npm run fix && npm run start:production",
    "start:production": "node dist/server.js",
    "fix": "standard '**/*.js' '**/*.*.js' --fix",
    "prisma-deploy": "cd src/prisma && prisma deploy"
  },
  "heroku-run-build-script": true,
  "keywords": [
    "express",
    "nodeJS",
    "graphQL",
    "prisma"
  ],
  "author": "tuevu",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "bcrypt": "^3.0.5",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.5.1",
    "standard": "^12.0.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-transform-regenerator": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/plugin-transform-template-literals": "^7.2.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "clean-webpack-plugin": "^2.0.1",
    "custom-env": "^1.0.1",
    "dotenv": "^7.0.0",
    "dotenv-webpack": "^1.7.0",
    "graphql-import": "^0.7.1",
    "graphql-tag": "^2.10.1",
    "husky": "^1.3.1",
    "mocha": "^6.1.3",
    "mocha-webpack": "^1.1.0",
    "prettier": "^1.17.0",
    "prettier-webpack-plugin": "^1.2.0",
    "prisma-client-lib": "^1.31.1",
    "raw-loader": "^2.0.0",
    "source-map-support": "^0.5.12",
    "start-server-webpack-plugin": "^2.2.5",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn fix"
    }
  }
}
