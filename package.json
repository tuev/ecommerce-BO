{
  "name": "express-mongograph",
  "version": "1.0.0",
  "description": "project use for server express using mongodb, graphql",
  "main": "src/index.js",
  "scripts": {
    "commit": "npx git-cz",
    "start": "cross-env NODE_ENV=development webpack --config webpack/webpack.dev.js --color -p --progress",
    "build": "webpack --config webpack/webpack.prod.js --color -p --progress --release --verbose --hide-modules --display-optimization-bailout",
    "build:clean": "rimraf ./build",
    "heroku-postbuild": "npm run build",
    "lint": "npm run lint:js",
    "lint:eslint": "./node_modules/.bin/prettier  \"src/**/*.{js,ts,md}\"",
    "lint:eslint:fix": "./node_modules/.bin/prettier --fix --write \"src/**/*.{js,ts,md}\"",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "prebuild": "npm run build:clean",
    "start:prod": "node build/main.js",
    "start-docker": "bash start-docker.sh",
    "test": "cross-env NODE_ENV=test mocha-webpack --timeout 1000000 --webpack-config webpack/webpack.test.js \"src /**/*.js\" \"test /**/*.js\" \"test/**/*.test.js\"  \"src/**/*.test.js\"",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text npm run test"
  },
  "keywords": [
    "mongo",
    "express",
    "mongoose",
    "graphql",
    "appollo"
  ],
  "author": "tuevu",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "apollo-server-express": "^2.13.0",
    "bcrypt": "^4.0.1",
    "express": "^4.17.1",
    "express-restify-mongoose": "^6.0.0",
    "faker": "^4.1.0",
    "graphql": "^15.0.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "method-override": "^3.0.0",
    "mongoose": "^5.9.11",
    "sift": "^12.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/runtime": "^7.9.6",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "circular-dependency-plugin": "^5.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.1.0",
    "cross-env": "^7.0.2",
    "dirty-chai": "^2.0.1",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "graphql-tag": "^2.10.3",
    "husky": "^4.2.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "lint-staged": "^10.2.2",
    "mocha": "^7.1.2",
    "mocha-webpack": "2.0.0-beta.0",
    "mongodb-memory-server": "^6.5.2",
    "nock": "^12.0.3",
    "nodemon-webpack-plugin": "^4.3.1",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "snazzy": "^8.0.0",
    "supertest": "^4.0.2",
    "terser-webpack-plugin": "^3.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false,
    "exclude": [
      "src/index.js",
      "src/server.js",
      "src/**/*.test.js",
      "src/**/*.model.js",
      "src/scalars/*",
      "src/directives/*"
    ]
  }
}
