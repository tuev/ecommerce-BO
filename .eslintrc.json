{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["google", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": { "prettier/prettier": "error" },
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js"],
      "rules": {}
    }
  ]
}
